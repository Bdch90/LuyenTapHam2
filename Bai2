    <script>
        tinh_toan();
        function tinh_toan()
        {
            var r = parseInt(prompt('Nhập vào bán kính hình tròn:'));
            var dien_tich=r*r*3.14;
            var chu_vi =r*2*3.14;
            alert('Diện tích hình tròn : '+dien_tich);
            alert(('chu vi hình tròn : ' +chu_vi));
        }
    </script>
